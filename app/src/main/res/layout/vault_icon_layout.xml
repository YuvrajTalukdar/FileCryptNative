<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="@color/transparent100"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/vault_icon_layout"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:background="@drawable/round_ripple_borderless_5dp"
            android:clickable="true"
            android:longClickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/drawer_header_imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/vault_icon"
                android:padding="3dp" />

            <TextView
                android:id="@+id/vault_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="3dp"
                android:text="test name"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAlignment="center"
                android:textColor="?attr/MediumColor"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>