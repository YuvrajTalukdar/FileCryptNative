<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="1dp"
        android:padding="3dp"
        app:cardBackgroundColor="@color/transparent100"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/vault_item_layout"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:background="@drawable/round_ripple_borderless_5dp">

            <ImageView
                android:id="@+id/thumbnail_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:foreground="@drawable/round_ripple_transparent_5dp"
                app:tint="@color/transparent100" />

            <TextView
                android:id="@+id/vault_item_name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/translucentGrey"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="3dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="test namefdfdfdf"
                android:textAlignment="center"
                android:textColor="?attr/MediumColor"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/check_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_ripple_translucent_border_5dp"
                android:clickable="true"
                android:longClickable="true"
                android:padding="25dp"
                android:src="@drawable/icon_check"
                android:visibility="invisible" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>